<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div class ="col-md-3">
			<p class="lead">Yelp Camp</p>
			<div class="list-group">
				<div >
					<li class="list-group-item active">Info 1 </li>
					<li class="list-group-item">Info 2</li>
					<li class="list-group-item">Info 3</li>
				</div>
			</div>
		</div>
		<div class=" col-lg-9 col-md-12 mt-3">
			<div class="img-thumbnail">
				<img class="img-responsive" src="<%=camp.image%>">
				<div class="figure-caption">
					<h4 class="text-right">$ <%=camp.price%>/night</h4>
					<h4><a href="/Campgrounds/<%=camp._id%>"><%=camp.name%></a></h4>
					<p><%=camp.description%></p>
					<p><em>Submitted By : <%=camp.author.username%></em></p>
					<% if(currentUser && camp.author.id.equals(currentUser._id)){ %>
						<a class="btn btn-warning" href="/Campgrounds/<%=camp._id%>/edit">Edit</a>
						<form id="delete-form" action="/Campgrounds/<%=camp.id%>?_method=DELETE" method="POST">
							<button class="btn btn-danger">Delete</button>
						</form>
					<%}	%>
					
				</div>
			</div>
			
			
					<div class="card card-body bg-light">
						<p class="text-right">
							<a href="/Campgrounds/<%=camp._id%>/comments/new" class="btn btn-success" >Add  New Comment</a>
						</p>
						<hr>
						<% camp.comments.forEach(function(cmt){ %>
						<div class="container" >
							<div><STRONG><%=cmt.author.username%></STRONG><span class="pull-right float-right">10 days ago </span></div>
							<p><%=cmt.text%></p>
							<% if(currentUser && cmt.author.id.equals(currentUser._id)){ %>
								<a class="btn btn-warning" href="/Campgrounds/<%=camp._id%>/comments/<%=cmt.id%>/edit">Edit</a>
								<form id="delete-form" action="/Campgrounds/<%=camp._id%>/comments/<%=cmt.id%>?_method=DELETE" method="POST">
									<button class="btn btn-danger">Delete</button>
								</form>
							<% } %>

							
							
						</div>
							
						<% })%>

					</div>

			
					
		
				
					
			
		</div>

	</div>
</div>









<%- include("../partials/footer") %>

