<%- include("../partials/header") %>



<div class="container" >
	
	<div class="row" >
		<div  style="margin: 0 auto">
		<h4> Enter details of new campgrounds </h4><br>
		<form  action="/campgrounds/<%=foundCamp.id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control " type="text" name="camp[name]"  value= "<%=foundCamp.name %>">
			</div>
			<div class="form-group">
				<input class="form-control " type="text" name="camp[image]" value = "<%=foundCamp.image %>">
			</div>
			<div class="form-group">
				<input class="form-control " type="Number" name="camp[price]" value = "<%=foundCamp.price %>" step="0.1" >
			</div>
			<div class="form-group">
				<input class="form-control " type="text" name="camp[description]" value= "<%= foundCamp.description %>">
			</div>
			<button class="btn btn-primary btn-lg btn-block">Submit</button>
		</form>
		<br>
		<a href="/campgrounds">Go Back</a>
		</div>

	</div>
</div>



<%- include("../partials/footer") %>